<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>GameVerse Digital Store</display-name>

    <!-- Basic Store APIs -->
    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>src.controller.GameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/api/games</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>src.controller.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/api/cart</url-pattern>
    </servlet-mapping>

    <!-- User & Auth -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>src.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>src.controller.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>src.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>src.controller.UserProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/api/profile</url-pattern>
    </servlet-mapping>

    <!-- NEW: Library & Purchase Flow -->
    <servlet>
        <servlet-name>LibraryServlet</servlet-name>
        <servlet-class>src.controller.LibraryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LibraryServlet</servlet-name>
        <url-pattern>/api/library</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>src.controller.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/api/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PurchaseHistoryServlet</servlet-name>
        <servlet-class>src.controller.PurchaseHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PurchaseHistoryServlet</servlet-name>
        <url-pattern>/api/history</url-pattern>
    </servlet-mapping>

    <!-- NEW: Wishlist -->
    <servlet>
        <servlet-name>WishlistServlet</servlet-name>
        <servlet-class>src.controller.WishlistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WishlistServlet</servlet-name>
        <url-pattern>/api/wishlist</url-pattern>
    </servlet-mapping>

    <!-- Admin -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>src.controller.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/api/admin</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>